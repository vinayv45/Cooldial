<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_medium"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:paddingBottom="@dimen/spacing_medium"
                android:id="@+id/booking_id"
                android:text="@string/update_coupon_status"
                android:textStyle="bold"
                android:textSize="@dimen/title_size_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/containerBtns"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_medium"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginTop="@dimen/spacing_medium"
                android:id="@+id/mark_as_unverified"
                android:text="@string/mark_as_unverified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginTop="@dimen/spacing_medium"
                android:id="@+id/mark_as_verified"
                android:text="@string/mark_as_verified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginTop="@dimen/spacing_medium"
                android:id="@+id/mark_as_used"
                android:text="@string/mark_as_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginTop="@dimen/spacing_medium"
                android:id="@+id/mark_as_declined"
                android:text="@string/mark_as_declined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <Button
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing_medium"
            android:id="@+id/dismissBtn"
            android:text="@string/dissmis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>