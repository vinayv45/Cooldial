<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_medium"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/user_image"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_large"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/profile_placeholder"
                app:siBorderColor="#eeeeee"
                app:siBorderWidth="3dp" />

            <TextView
                android:gravity="center"
                android:paddingBottom="@dimen/spacing_medium"
                android:id="@+id/scan_result_label"
                android:text="Result title"
                android:textStyle="bold"
                android:textSize="@dimen/title_size_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:id="@+id/scan_result_subLabel"
                android:paddingBottom="@dimen/spacing_small"
                android:text="Sub title result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:id="@+id/scan_result_description"
                android:paddingBottom="@dimen/spacing_medium"
                android:text="Result description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <Button
            android:layout_marginTop="@dimen/spacing_medium"
            android:id="@+id/continueBtn"
            android:text="@string/continueScaningButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing_medium"
            android:id="@+id/validateBtn"
            android:text="@string/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>